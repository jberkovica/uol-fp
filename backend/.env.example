# Mira Storyteller Backend Environment Variables
# Copy this file to .env and fill in your actual API keys

# Google API (for Gemini image analysis)
GOOGLE_API_KEY=your_google_api_key_here

# Mistral API (for story generation)
MISTRAL_API_KEY=your_mistral_api_key_here

# ElevenLabs API (for text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: Alternative AI providers
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_anthropic_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
REPLICATE_API_TOKEN=your_replicate_token_here

# Application Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
# For development (SQLite fallback)
# DATABASE_URL=sqlite:///./mira_storyteller.db

# For production (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:your_db_password@db.your_project_ref.supabase.co:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://your_project_ref.supabase.co
SUPABASE_ANON_KEY=your_anon_public_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Security Configuration
SECRET_KEY=your_secret_key_for_jwt_signing
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000